<Window x:Class="ChordVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChordVisualizer.Views"
        xmlns:views="clr-namespace:ChordVisualizer.Views"
        mc:Ignorable="d"
        Title="Guitar Chord Visualizer" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <!-- Tab für den Gitarrenhals -->
            <TabItem Header="Fretboard">
                <local:FretboardView />
            </TabItem>

            <!-- Tab für das Recording -->
            <TabItem Header="Recording">
                <local:RecordingView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>